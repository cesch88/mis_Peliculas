%table#peliculas
  %thead
    %tr
      %th Titulo
      %th Calificacion
      %th Fecha Estreno
      %th Mas informacion
  %tbody
    - @peliculas.each do |pelicula|
      %tr
        %td= pelicula.titulo
        %td= pelicula.calificacion
        %td= pelicula.fecha_estreno
        %td= link_to "Mas sobre #{pelicula.titulo}", pelicula_path(pelicula)
        %td= link_to 'Agregar nueva pelicula' , new_pelicula_path

